{
  "compilerOptions": {
    "target": "es2020",                // Specifies the target ECMAScript version
    "module": "commonjs",              // Specifies the module code generation
    "moduleResolution": "node",        // Determines how modules are resolved
    "outDir": "./dist",                // Redirects output structure to the directory
    "rootDir": "./src",                // Specifies the root directory of input files
    "strict": true,                    // Enables all strict type-checking options
    "esModuleInterop": true,           // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,              // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures that casing of filenames is consistent
    "resolveJsonModule": true,         // Allows importing JSON modules
    "baseUrl": "./",                   // Base directory for non-relative module names
    "paths": {
      "*": ["node_modules/*"]          // Specifies paths for module resolution
    }
  },
  "include": [
    "src/**/*.ts"                      // Specifies the files to be included
  ],
  "exclude": [
    "node_modules",                    // Specifies the files to be excluded
    "**/*.spec.ts"                     // Excludes test files from compilation
  ]
}
